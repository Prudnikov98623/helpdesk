<%= form_with(model: request, local: true) do |form| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> не позволяет сохранить эту заявку:</h2>

      <ul>
        <% request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Заголовок" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description, "Описание" %>
    <%= form.text_area :description %>
  </div>

<div class="field">
  <%= form.label :status, "Статус" %>
  <%= form.select :status, Request.statuses.keys.map { |status| [Request.statuses[status].humanize, status] } %>
</div>

<div class="field">
  <%= form.label :request_type, "Тип" %>
  <%= form.select :request_type, Request.request_types.keys.map { |type| [Request.request_types[type].humanize, type] } %>
</div>


  <div class="actions">
    <%= form.submit "Создать заявку" %>
  </div>
<% end %>
