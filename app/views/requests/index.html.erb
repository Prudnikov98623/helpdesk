<h1>Список Заявок</h1>

<table>
  <tr>
    <th>Заголовок</th>
    <th>Описание</th>
    <th>Статус</th>
    <th>Тип</th>
    <th colspan="3"></th>
  </tr>

 <% @requests.each do |request| %>
  <tr>
    <td><%= request.title %></td>
    <td><%= request.description %></td>
    <td><%= Request.statuses[request.status].humanize %></td>
    <td><%= Request.request_types[request.request_type].humanize %></td>
    <td><%= link_to 'Показать', request %></td>
    <td><%= link_to 'Изменить', edit_request_path(request) %></td>
   <td>
  <%= form_with(model: request, local: true, method: :delete, data: { confirm: 'Вы уверены?' }) do |form| %>
    <%= form.submit 'Удалить' %>
  <% end %>
</td>
  </tr>
<% end %>
</table>

<%= link_to 'Новая Заявка', new_request_path %>
